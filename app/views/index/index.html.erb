<% if user_signed_in? %>
  <% @feeds.each do |feed| %>
    <% site = Site.find feed.site_id %>
    <p>Сайт: <%= link_to site.name, site_feeds_path(site) %></p>
    <p><%= link_to feed.title, site_feed_path(site, feed) %> <%= link_to "(#{feed.url})", feed.url %></p>
    <%#ToDo: Очень мелко%>
    <p><%= link_to 'Добавить в избранное', favorit_add_path(feed_id: feed.id), method: :post %></p>
    <p><%= raw feed.description %></p>
    ------
    <p><%= feed.date.to_s %></p>
    <hr>
  <% end %>
  <%= will_paginate @feeds %>
<% else %>
  <h2>Добро пожаловать на dkrss!</h2>
<% end %>

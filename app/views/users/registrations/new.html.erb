<h2>Регистрация</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
    <%= f.input :password, :required => true, label: 'Пароль: ', input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
    <%= f.input :password_confirmation, :required => true, label: 'Подтверждение пароля: ', input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Регистрация" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

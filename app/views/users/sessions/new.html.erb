<h2>Войти</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
    <%= f.input :password, :required => false, label: 'Пароль: ', input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
    <%= f.input :remember_me, :as => :boolean, label: 'Запомнить вас?', wrapper_html: { class: 'checkbox' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

<%= simple_form_for(@favorit, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.input :name, label: 'Название: ', input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
  <%= f.input :url, label: 'Ссылка: ', input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
  <%= f.input :description, label: 'Описание: ', as: :text, input_html: { class: 'form-control' }, wrapper_html: { class: 'form_group' } %>
  <%= f.button :submit, class: 'btn-primary', value: 'Сохранить' %>
<% end %>
